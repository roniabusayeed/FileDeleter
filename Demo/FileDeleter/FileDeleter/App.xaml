<Application x:Class="FileDeleter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FileDeleter"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <SolidColorBrush x:Key="buttonBackgroundColor" Color="White"/>
        
        <Style x:Key="shortButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource buttonBackgroundColor}"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Width" Value="72"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="3"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style x:Key="longButtonStyle" TargetType="Button" BasedOn="{StaticResource shortButtonStyle}">
            <Setter Property="Width" Value="112"/>
        </Style>
    </Application.Resources>
</Application>
